@{ ViewBag.Title = "Producto"; <!--Layout = "~/Views/Shared/_Layout.cshtml";--> }

@model ML.Producto

<h2>Motos</h2>

@using (Html.BeginForm("GetAll", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-group">
    <div class="row">       
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.Fert, new { @class = "form-control", placeholder = "Fert" })
            @Html.ValidationMessageFor(model => model.Fert)
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.Modelo, new { @class = "form-control", placeholder = "Modelo" })
            @Html.ValidationMessageFor(model => model.Modelo)
        </div>
        <div class="col-md-3">
            <input type="submit" value="Buscar" class="btn btn-info" />
        </div>
        <div class="row" align="right">
            <div class="col-md-12 col-md-3">
                @Html.ActionLink("Agregar", "Form", "Producto", htmlAttributes: new { @class = "btn btn-success" })
            </div>
        </div>
       
    </div>
</div>}
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <tr>
                <th class="text-center" scope="col">
                    Editar
                </th>
                <th class="text-center" scope="col">
                    Id Producto
                </th>
                <th class="text-center" scope="col">
                    Fert
                </th>
                <th class="text-center" scope="col">
                    Modelo
                </th>
                <th class="text-center" scope="col">
                    Tipo
                </th>
                <th class="text-center" scope="col">
                    Numero de Serie
                </th>
                <th class="text-center" scope="col">
                    Fecha
                </th>
                <th class="text-center" scope="col">
                    Eliminar
                </th>
            </tr>
            @foreach (ML.Producto producto in Model.Productos)
            {
<tr>
    <th class="text-center">
        <a href="@Url.Action("Form", "Producto", producto)" title="Editar">
            <img style="height: 25px; width: 25px; " src="../../img/editar.jpg" />
        </a>
    </th>
    <td class="text-center">
        @producto.IdProducto
    </td>
    <td class="text-center">
        @producto.Fert
    </td>
    <td class="text-center">
        @producto.Modelo
    </td>
    <td class="text-center">
        @producto.Tipo.Nombre
    </td>
    <td class="text-center">
        @producto.NumeroDeSerie
    </td>
    <td class="text-center">
        @producto.Fecha
    </td>
    <th class="text-center">
        <a href="@Url.Action("Delete","Producto", new { IdProducto = producto.IdProducto })" onclick="return confirm('¿Desea eliminar estos datos?');">
            <img style="height: 20px; width: 20px" src="../../img/eliminar.png" />
        </a>
    </th>
</tr>
}
        </table>
    </div>
</div>

